<%# Renders the header (this is a sinatra feature) %>
<%= erb :header %>

  <div class="ui one column stackable centered grid" style="margin: 0; margin-top: 50px;">
    <div class="column ten wide">
      <h2 class="ui center aligned green header">
        <div class="content">
          sign up for an account
        </div>
      </h2>

      <% if defined? err and err then %>
        <div class="ui negative message">
          <div class="header">
            <%= err %>
          </div>
        </div>
      <% end %>

      <form class="ui large form top-buffer" id="signup-form" action="signup" method="POST">
        <div class="ui stacked segment">
          <div class="field">
            <label>e-mail address</label>
            <input type="text" name="email" placeholder="e-mail" <% if defined? email and email then %>value="<%= email %>"<% end %>>
          </div>
          <div class="field">
            <div class="two fields">
              <div class="field">
                <label>password</label>
                <input type="password" name="password" placeholder="password">
              </div>
              <div class="field">
                <label>re-enter password</label>
                <input type="password" name="repassword" placeholder="re-enter password">
              </div>
            </div>
          </div>
          <div class="ui divider"></div>
          <div class="field">
            <label>full name (optional)</label>
            <div class="two fields">
              <div class="field">
                <input type="text" name="firstName" placeholder="first name" <% if defined? firstName and firstName then %>value="<%= firstName %>"<% end %>>
              </div>
              <div class="field">
                <input type="text" name="lastName" placeholder="last name" <% if defined? lastName and lastName then %>value="<%= lastName %>"<% end %>>
              </div>
            </div>
          </div>
          <div class="ui divider"></div>
          <div class="centered">
            <div class="field">
              <div class="ui checkbox">
                <input type="checkbox" tabindex="0" class="hidden">
                <label>I agree to the <b>Terms</b> and <b>Conditions</b></label>
              </div>
            </div>
            <div class="column">
              <button class="ui yellow big button" type="submit">submit</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>

<%= erb :footer %>